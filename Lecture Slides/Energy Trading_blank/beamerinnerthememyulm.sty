%Titelseite der Prsentation:

\defbeamertemplate*{title page}{myulm}[1][]
{
    %\vspace{-0.16em}
%Logo der Uni:
    \begin{tabular*}{\paperwidth}[b]{p{18.6em}r}
        \vspace{0.6em}
        & \hspace{0.05cm} \includegraphics[scale=0.35]{unilogo.png}
    \end{tabular*}
%grosses Bild in der Mitte der Startseite:
      \begin{beamercolorbox}[sep=8pt,left,#1]{institute}
          \leftskip-2.86em%
          %\vskip0.8em
          %\centering
          \includegraphics[width=1.0\paperwidth, opacity=0.2]{title4.JPG}
        \end{beamercolorbox}

%Bereich unter dem Bild:
        \begin{beamercolorbox}[sep=8pt,right,#1]{title}
            \leftskip-3em%
            \vskip0.3em%
             \begin{tabular*}{\paperwidth}[b]{p{0.0\paperwidth}p{0.85\paperwidth}}
%Titel der Präsentation:
                  & \usebeamerfont{title}\parbox{30em}{\inserttitle}\\%
                  \\
               	%\hspace{0.0cm} \textcolor[rgb]{0,0,0}{  \parbox[t]{15.5em} { \tiny \insertauthor}}%
%Untertitel der Präsentation:
               & {\usebeamerfont{subtitle}\parbox{30em}{\textcolor{orange}{\insertsubtitle}}}\\%
		\\
               & \textcolor[rgb]{0,0,0}{  \parbox[t]{30em} {\tiny \insertauthor\ $\vert$ \insertinstitute\ $\vert$ University of Duisburg-Essen
}}%
             \end{tabular*}
        \end{beamercolorbox}%

    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \vfill
}


% Part page: myulm
\defbeamertemplate*{part page}{myulm }[1][]
{
  \begin{centering}
    {\usebeamerfont{part name}\usebeamercolor[fg]{part name}\partname~\insertromanpartnumber}
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{part title}
      \usebeamerfont{part title}\insertpart\par
    \end{beamercolorbox}
  \end{centering}
}
